generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                        Int @id @default(autoincrement())
  name                      String
  username                  String @unique
  password                  String
}

model Settings {
  id                        Int @id @default(autoincrement())
  npsn                      String
  nama_sekolah              String
  email_sekolah             String
  alamat_sekolah            String
  semester                  String
  nama_kepsek               String
  nip_kepsek                String
  logo_sekolah              String
  aktif_pengumuman          Int
  waktu_pengumuman          String
  izin_login                Int
}

model Siswa {
  id                        Int @id @default(autoincrement())
  nama                      String
  nis                       String
  nisn                      String @unique
  kelas                     String
  password                  String
  tempat_lahir              String
  tanggal_lahir             String
  keterangan                Int
}

model Pengumuman {
  id                        Int @id @default(autoincrement())
  pengumuman                String
}
